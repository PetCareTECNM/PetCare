# API
PORT=3002

# Provider: 'mssql' (SQL Server) or 'mongo' (MongoDB Atlas)
DB_PROVIDER=mongo

#############################################
# MongoDB Atlas (recommended free tier)
#############################################
# Replace with your connection string from Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
# Database name to use
MONGODB_DB=RegistroDeVeterinaria

#############################################
# SQL Server (optional alternative)
#############################################
# DB_PROVIDER=mssql
DB_SERVER=localhost\SQLEXPRESS
DB_DATABASE=RegistroDeVeterinaria
# Uncomment and set if using SQL authentication
# DB_USER=sa
# DB_PASSWORD=YourStrong!Passw0rd
# Set to true only if your SQL Server requires encryption
DB_ENCRYPT=false
